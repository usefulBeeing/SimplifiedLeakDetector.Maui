<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SimplifiedLeakDetector.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SimplifiedLeakDetector"
    Shell.FlyoutBehavior="Disabled"
    Title="SimplifiedLeakDetector">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Detector Page"
            ContentTemplate="{DataTemplate local:DetectorPage}"
            Route="DetectorPage" />
    </TabBar>
</Shell>
